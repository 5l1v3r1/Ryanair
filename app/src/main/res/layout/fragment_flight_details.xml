<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.flightdetails.FlightDetailsFragment">

    <TextView
        android:id="@+id/text_view_details_origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Origin:" />

    <TextView
        android:id="@+id/text_view_details_origin_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="placeholder" />

    <TextView
        android:id="@+id/text_view_details_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination:" />

    <TextView
        android:id="@+id/text_view_details_destination_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="placeholder" />

    <TextView
        android:id="@+id/text_view_details_infants_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Infants left:" />

    <TextView
        android:id="@+id/text_view_details_infants_left_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="placeholder" />

    <TextView
        android:id="@+id/text_view_details_fare_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fare class" />

    <TextView
        android:id="@+id/text_view_details_fare_class_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="placeholder" />

    <TextView
        android:id="@+id/text_view_details_discount_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discount percent" />

    <TextView
        android:id="@+id/text_view_details_discount_percent_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="placeholder" />
</LinearLayout>